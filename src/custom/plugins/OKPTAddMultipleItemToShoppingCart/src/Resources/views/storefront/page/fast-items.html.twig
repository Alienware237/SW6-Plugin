{% sw_extends '@Storefront/storefront/page/content/index.html.twig' %}

{% block page_content %}
    <form action="{{ path('frontend.fast.order.add') }}" method="post">
        {% for i in 1..10 %}
            <div>
                <label for="productNumber{{ i }}">Product Number {{ i }}:</label>
                <input type="text" name="items[{{ i }}][productNumber]" id="productNumber{{ i }}" required>
                <label for="quantity{{ i }}">Quantity {{ i }}:</label>
                <input type="number" name="items[{{ i }}][quantity]" id="quantity{{ i }}" min="1" required>
            </div>
        {% endfor %}
        <button type="submit">Add to cart</button>
    </form>
{% endblock %}

